{
  "env": {
    "browser": true,
    "amd": true,
    "node": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:mocha/recommended"
  ],
  "rules": {
    "react/prop-types": "off",
    "mocha/no-mocha-arrows": 0
  },
  "plugins": [
    "react",
    "mocha"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}